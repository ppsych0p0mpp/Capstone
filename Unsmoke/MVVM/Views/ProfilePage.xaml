<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unsmoke.MVVM.Views.ProfilePage"
             xmlns:vm="clr-namespace:Unsmoke.MVVM.ViewModel"
             Title="ProfilePage">

    <ContentPage.BindingContext>
        <vm:ProfileVM/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Spacing="-10">
        <!-- User Details -->
        <ImageButton Source="back"
                     HeightRequest="30"
                     WidthRequest="50"
                     HorizontalOptions="Start"
                     Margin="0,10,0,0"
                     Command="{Binding GotoDash}"/>
        <Border WidthRequest="370"
                HeightRequest="230"
                Margin="20"
                BackgroundColor="#2E2E2E">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30"/>
            </Border.StrokeShape>
            <VerticalStackLayout>
                    <HorizontalStackLayout>
                    <!--User Info Section-->
                    <ImageButton Source="user" 
                           HeightRequest="80" 
                           WidthRequest="100" 
                           HorizontalOptions="Start" 
                           Margin="20,20,0,10"/>
                    <Label Text="John Doe"
                           TextColor="White"
                           FontAttributes="Bold"
                           FontSize="20"
                           Margin="10,40,0,0"/>
                    <Label Text="Quit Date :"
                           Margin="-80,70,0,0"
                           TextColor="White"/>
                </HorizontalStackLayout>
                <Border Margin="30,10,30,0"
                        HeightRequest="80"
                        BackgroundColor="#FFC000"
                        Stroke="Transparent">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout>
                        <Label Text="Current Streak"
                               Margin="20,10,0,0"
                               FontSize="12"
                               FontAttributes="Bold"/>
                        <Label Text="Days Smoke-Free"
                               Margin="50,10,0,0"
                               FontAttributes="Bold"
                               FontSize="18"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>

        <Border WidthRequest="370"
                HeightRequest="300">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <VerticalStackLayout>
                <Label Text="Assessment Results"
                           FontSize="25"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           Margin="0,20,0,0"/>
                <!-- Content Section -->
                <ScrollView Grid.Row="1" Margin="0,10,0,10">
                    <StackLayout Spacing="12" Padding="5">

                        <!-- Each line of summary in a styled frame -->
                        <Frame BackgroundColor="Transparent"
                               BorderColor="Transparent"
                               Padding="10" CornerRadius="12" HasShadow="False">
                            <Label Text="{Binding SummaryMessage}" 
                                   FontSize="16"
                                   TextColor="#000000"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="WordWrap"/>
                        </Frame>

                    </StackLayout>
                </ScrollView>
            </VerticalStackLayout>
            <!-- Header -->
        </Border>
            
        <Button Text="Logout"
                WidthRequest="360"
                Margin="0,150,0,0"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="20"
                BackgroundColor="#FFC000"/>
    </VerticalStackLayout>
</ContentPage>