<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unsmoke.MVVM.Views.CreatePost"
             xmlns:vm="clr-namespace:Unsmoke.MVVM.ViewModel"
             Title="CreatePost">

    <ContentPage.BindingContext>
        <vm:CreatePostVM/>
    </ContentPage.BindingContext>

        <Grid>
            <VerticalStackLayout>
                <HorizontalStackLayout Spacing="80"
                                       >
                <ImageButton Source="dotnet_bot"
                                 HeightRequest="50"
                                 WidthRequest="50"
                                 Margin="20,20,0,0"
                                 BackgroundColor="Transparent"
                                 Command="{Binding GotoCommunity}"/>
                <Label Text="Create Post"
                           FontSize="30"
                           FontAttributes="Bold"/>
                </HorizontalStackLayout>


                <Label Text="Select Tags"
                       Margin="30,40,0,-10"
                       FontSize="20"/>
                <Border HeightRequest="50" WidthRequest="370" BackgroundColor="#FFFFFF"
                        Margin="20"
                        Stroke="#FCC000"
                        StrokeThickness=".5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="10,10"
                                Radius="10"
                                Opacity="0.5"/>
                    </Border.Shadow>
                    <VerticalStackLayout>
                        <Picker Margin="10,0,0,0"
                                Title="Add a tag"
                                HorizontalOptions="Start"
                                WidthRequest="300">
                        </Picker>
                    </VerticalStackLayout>
                </Border>

                <Label Text="Post Details"
                       FontSize="20"
                       Margin="30"/>

                <Border WidthRequest="370"
                        HeightRequest="200"
                        Stroke="#FCC000"
                        BackgroundColor="#FFFFFF">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="10,10"
                                Radius="10"
                                Opacity="0.5"/>
                    </Border.Shadow>

                    <Entry Placeholder="Share your Journney."/>
                </Border>

                <Button VerticalOptions="End"
                        WidthRequest="370"
                        Margin="230"
                        Text="SUBMIT POST"
                        BackgroundColor="#FCC000"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold"
                        Command="{Binding CreatePostCommand}"/>
            </VerticalStackLayout>
        </Grid>
</ContentPage>