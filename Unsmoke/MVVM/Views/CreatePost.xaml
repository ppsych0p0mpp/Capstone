<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unsmoke.MVVM.Views.CreatePost"
             xmlns:vm="clr-namespace:Unsmoke.MVVM.ViewModel"
             Title="CreatePost"
             BackgroundColor="#faf9f6">

    <ContentPage.BindingContext>
        <vm:CreatePostVM/>
    </ContentPage.BindingContext>

        <Grid>
            <VerticalStackLayout>
                <HorizontalStackLayout Spacing="60"
                                       >
                <ImageButton Source="back"
                             HeightRequest="40"
                             WidthRequest="50"
                             Margin="0,0,0,0"
                             Command="{Binding GotoCommunity}"/>
                <Label Text="Create Post"
                           FontSize="30"
                           FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                </HorizontalStackLayout>


                <Label Text="Select Tags"
                       Margin="30,40,0,-10"
                       FontSize="20"/>
                <Border HeightRequest="50" WidthRequest="370" BackgroundColor="#FFFFFF"
                        Margin="20"
                        Stroke="Black"
                        StrokeThickness=".5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="10,10"
                                Radius="10"
                                Opacity="0.5"/>
                    </Border.Shadow>
                    <VerticalStackLayout>
                        <Picker Margin="10,0,0,0"
                                Title="Add a tag"
                                ItemsSource="{Binding AvailableTags}"
                                SelectedItem="{Binding Selectedtags}"
                                HorizontalOptions="Start"
                                WidthRequest="350">
                        </Picker>
                    <!-- Down Arrow -->
                    <Image Source="down.png"
                           HeightRequest="25"
                           WidthRequest="25"
                           HorizontalOptions="End"
                           Margin="0,-35,20,0"/>
                </VerticalStackLayout>
                </Border>

                <Label Text="Post Details"
                       FontSize="20"
                       Margin="30,20,0,0"/>

                <Border WidthRequest="370"
                        HeightRequest="200"
                        Stroke="Black"
                        BackgroundColor="#FFFFFF"
                        Margin="10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="10,10"
                                Radius="10"
                                Opacity="0.5"/>
                    </Border.Shadow>

                <Editor Placeholder="Share your progress, thoughts, or encouragement with the community..."
                        AutoSize="TextChanges"
                        HeightRequest="150"
                        Keyboard="Chat"
                        Margin="10"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="{Binding Content}"/>


            </Border>

                <Button VerticalOptions="End"
                        WidthRequest="370"
                        Margin="230"
                        Text="SUBMIT POST"
                        BackgroundColor="#FCC000"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold"
                        Command="{Binding CreatePostCommand}"/>
            </VerticalStackLayout>
        </Grid>
</ContentPage>