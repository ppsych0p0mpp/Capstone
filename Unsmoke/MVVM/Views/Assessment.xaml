<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unsmoke.MVVM.Views.Assessment"
             Title="Assessment"
             xmlns:vm="clr-namespace:Unsmoke.MVVM.ViewModel"
             BackgroundColor="#FFFFFF">
    
    <ContentPage.BindingContext>
        <vm:AssessmentViewModel/>
    </ContentPage.BindingContext>
    


    <VerticalStackLayout>
        <ImageButton Source="dotnet_bot"
                     HeightRequest="50"
                     WidthRequest="100"
                     Margin="-340,0,0,0"
                     Command="{Binding Back}"
                     IsVisible="{Binding BackButton}"/>
        
        <Frame BackgroundColor="#FFFFFF" BorderColor="Transparent" IsVisible="{Binding IsFirstVisible}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <VerticalStackLayout>
                    <Image Source="dotnet_bot.png"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HeightRequest="250"
                           WidthRequest="250"
                           Grid.Row="0"/>
                    <Label Text="Ready to start your quitting journey towards a healthier You?"
                           FontSize="50"
                           VerticalOptions="Center"
                           Grid.Row="0"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           HorizontalOptions="Center">
                    </Label>

                    <Button Text="Get Started" FontSize="30"
                             Grid.Row="1"
                             HeightRequest="63"
                             WidthRequest="195"
                             CornerRadius="26"
                             FontAttributes="Bold"
                             Margin="10,130,0,0"
                             Command="{Binding Show}"
                             VerticalOptions="End"/>
                </VerticalStackLayout>

                
            </Grid>
        </Frame>
        
        <!-- Question 1 -->
        <Frame IsVisible="{Binding IsSecondVisible}" BackgroundColor="White" BorderColor="Yellow"
               HeightRequest="500" Margin="10,100,10,10">
            <Grid>
                <VerticalStackLayout VerticalOptions="Center" Padding="40">
                    <Label Text="Select your Gender" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"/>
                    <Label Text="Sex and hormones impact how our body responds to cigarettes. Which sex best describes you?"  
                           HorizontalOptions="Center" 
                           VerticalTextAlignment="Center"
                           Padding="10"/>
                    <Grid Margin="0,100,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <RadioButton Content="Male"
                                     IsChecked="{Binding Assessment.Gender}"/>
                            
                        <RadioButton Grid.Column="1" Content="Female"   
                                     IsChecked="{Binding Assessment.Gender}"/>

                        <Button Text="Next" Margin="0,100,0,0"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Command="{Binding secondbtnQ}"/>

                    </Grid>
                    
                </VerticalStackLayout>
            </Grid>
                
            
        </Frame>
        
        <!-- Question 2-->
        <Frame IsVisible="{Binding IsThirdVisible}" HeightRequest="500" Margin="10,100,10,10">
            <Grid>
                    <Label Text="How Long Have You Been Using Cigarettes?"
                           VerticalTextAlignment="Center"
                           VerticalOptions="Start"
                           FontSize="30"
                           FontAttributes="Bold"
                           />
                <!-- Months/Years Picker -->
                <Picker Grid.Row="2"
                        FontSize="20"
                        Title="Select"
                        WidthRequest="100"
                        Margin="110,120,-20,0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        IsEnabled="True"
                        SelectedItem="{Binding Assessment.YearMonth}">
                    <Picker.Items>
                        <x:String>Months</x:String>
                        <x:String>Years</x:String>
                    </Picker.Items>
                    
                </Picker>
                
                <!-- Duration Entry -->
                <Entry VerticalOptions="Center" WidthRequest="100"
                       FontSize="50" 
                       Margin="0,83,110,0"
                       VerticalTextAlignment="Center"
                       Keyboard="Numeric"
                       HorizontalTextAlignment="Center"
                       MaxLength="2"
                       Text="{Binding Assessment.YearsOfSmoking}"/>

                <Button Text="Next" Margin="0,120,0,0"
                        VerticalOptions="End"
                        Command="{Binding thirdbtnQ}"/>

            </Grid>
            
        </Frame>
        
        <!-- Question 3-->
        <Frame IsVisible="{Binding IsFourthVisible}" HeightRequest="500" Margin="10,100,10,10">
            <Grid>
                <VerticalStackLayout>
                    <Label Text="How Often Do You Use Cigarettes?"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="35"
                           FontAttributes="Bold"/>
                    <Label Text="Times" 
                           Margin="200,150,0,0" 
                           FontSize="30"/>
                    
                    <Entry WidthRequest="100" 
                           VerticalOptions="Center"
                           FontSize="50" 
                           Keyboard="Numeric"
                           Margin="20,-70,80,90"
                           MaxLength="2"
                           Text="{Binding Assessment.CigarettesPerDay}"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                
                <Button Text="Next" Margin="0,120,0,0"
                        VerticalOptions="End"
                        Command="{Binding fourthbtnQ}"/>

            </Grid>
           
        </Frame>
        
        <!-- Question 4-->
        
        <Frame IsVisible="{Binding IsFifthVisible}" HeightRequest="500" Margin="10,100,10,10">
            <Grid>
                <Label Text="On An Average, How Much Does Per Cigarette Cost?"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       FontSize="35"
                       FontAttributes="Bold"/>
                <Label Text="Pesos"
                       FontSize="40"
                       Margin="0,0,10,-90"
                       VerticalOptions="Center"/>
                <Entry WidthRequest="150"
                       VerticalOptions="Center"
                       Margin="60,0,0,-70"
                       FontSize="50"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       MaxLength="5"
                       Text="{Binding Assessment.CigaretteCost, StringFormat='{0:F2}', Mode=TwoWay}"/>

                <Button Text="Next" Margin="0,120,0,0"
                        VerticalOptions="End"
                        Command="{Binding fifthbtnQ}"/>

            </Grid>
            
        </Frame>
        
        <!-- Question 5-->
        <Frame IsVisible="{Binding IsSixthVisible}" HeightRequest="500" Margin="10,100,10,10">
            <Grid>
                <Label Text="How Confident Are You In Your Ability To Quit Cigarettes?"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       FontAttributes="Bold"
                       FontSize="30"/>
                <Image Source="dotnet_bot"
                       WidthRequest="200"
                       HeightRequest="200"/>

                <CollectionView SelectionMode="Single">
                     
                </CollectionView>

                <!--<Button Text="Next" Margin="0,120,0,0"
                        VerticalOptions="End"
                        Command="{Binding sixthbtnQ}"/>-->
            </Grid>
           
        </Frame>
        
        
      
        <!-- Result-->

        <Frame IsVisible="{Binding IsSeventhVisible}"  HeightRequest="500" Margin="10,100,10,10">

            <Grid>
                <Label Text="Result"/>

            
                <!--<Button Text="Next" Margin="0,120,0,0"
                        VerticalOptions="End"
                        Command="{Binding seventhbtnQ}"/>-->
            </Grid>
            
            
        </Frame>

       
    </VerticalStackLayout>
</ContentPage>