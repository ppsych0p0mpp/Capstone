<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Unsmoke.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Unsmoke"
    xmlns:pages="clr-namespace:Unsmoke.MVVM.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    Title="Unsmoke">

    <!--Add a Profile page-->
    
    <!--Middle-->
    <FlyoutItem Title="Dashboard" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Dashboard"
                      ContentTemplate="{DataTemplate pages:Dashboard}"
                      Route="Dashboard" 
                      Icon="dashboard"
                      />
        <ShellContent Title="Progress" 
                      ContentTemplate="{DataTemplate pages:Progress}"
                      Route="Progress" 
                      Icon="progress"/>
        <ShellContent Title="Plan" 
                       ContentTemplate="{DataTemplate pages:MyPlan}"
                       Route="MyPlan" 
                       Icon="myplan"/>
        <ShellContent Title="Community" 
                       ContentTemplate="{DataTemplate pages:Community}"
                       Route="Community" 
                       Icon="community"/>
    </FlyoutItem>

</Shell>
